<h2>LISTA DE CATEGORIAS</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">NOVA CATEGORIA</button></a>
{{#each categorias}}
<div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <small>Slug: {{slug}}</small> <br>
        <small>Data de Criação: {{date}}</small> 
       <br><a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-3">Editar Categoria</button></a>
        <form action="" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
             <button type="submit" class="btn btn-danger mt-2">Deletar Categoria</button>
        </form>
    </div>
</div>
{{else}}
{{/each}}